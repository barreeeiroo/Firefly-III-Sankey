{
  "name": "firefly-iii-sankey",
  "version": "0.2.2",
  "description": "Generate beautiful Sankey diagrams from your Firefly III financial data. Visualize money flows through income, budgets, categories, and expenses with SankeyMatic-compatible output.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "firefly-iii-sankey": "./dist/cli.js"
  },
  "scripts": {
    "build": "npm run build:bundle && npm run build:types",
    "build:bundle": "node build.mjs",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationMap",
    "prepublishOnly": "npm run build",
    "start": "npm run build && node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CONTRIBUTING.md"
  ],
  "keywords": [
    "firefly-iii",
    "sankey",
    "sankey-diagram",
    "sankeymatic",
    "finance",
    "financial-visualization",
    "money-flow",
    "budget",
    "expense-tracking",
    "personal-finance",
    "cli",
    "typescript"
  ],
  "author": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/barreeeiroo/Firefly-III-Sankey.git"
  },
  "bugs": {
    "url": "https://github.com/barreeeiroo/Firefly-III-Sankey/issues"
  },
  "homepage": "https://github.com/barreeeiroo/Firefly-III-Sankey",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "lz-string": "^1.5.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/lz-string": "^1.3.34",
    "@types/node": "^22.0.0",
    "esbuild": "^0.25.12",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.0"
  }
}
